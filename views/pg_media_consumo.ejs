<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vruum!</title>

    <!--Bootstrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css2?family=MuseoModerno:wght@300&display=swap" rel="stylesheet">

    <!--meuCSS-->
    <link rel="stylesheet" href="css/estilo_consumo.css">

    <!--Favicon-->
    <link rel="shortcut icon" href="img/favicon.ico" />

    <!--Fonte Eletrolize-->
    <link href="https://fonts.googleapis.com/css2?family=Electrolize&display=swap" rel="stylesheet">

</head>

<body>
    <div class="container">

        <nav>
            <div class="logo">
                <a href='/'>
                    <img src="img/logo2.svg" 
                         id="logo1">
                </a>
            </div>
            <!--logo-->

            <ul class="nav-links">
                <li><a href='/'>Home</a></li>
                <li><a href='/consumo' 
                       id="ativo">Consumo</a></li>
                <li><a href='/alcool_gasolina'>Combustível</a></li>
                <li><a href='/custo_percurso'>Percurso</a></li>
            </ul>
            <!--nav-links-->

            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
            <!--burger-->

        </nav>
        <!--nav-->

    </div>
    <!--container-->


    <div class="container-body container-fluid row">
        <div class="card-body col-12 col-md-10 col-xl-8 row">

            <div class="img-body col-10 col-lg-9 col-xl-5 mx-3">
                <img src="img/bmw.svg" id="img-bmw">
            </div>
            <!--img-body-->

            <div class="content-body col-10 col-md-11 col-lg-9 col-xl-5 mx-3">
                <h2 class="title-content">Media de Consumo</h2>

                <form action="/consumo" 
                      method="POST">

                    <h5>Quantidades de litros:</h5>
                    <input class="form-control" 
                           id="litros" 
                           type="" 
                           name="litros" 
                           autocomplete="off"
                           placeholder="Digite a capacidade do tanque"
                           value="<%= typeof litros !== 'undefined' ? litros : null %>" />

                    <h5>Quilômetros percorridos:</h5>
                    <input class="form-control" 
                           id="km_perc" 
                           type="" 
                           name="km_perc" 
                           autocomplete="off"
                           placeholder="Digite a quilometragem percorrida"
                           value="<%= typeof km_perc !== 'undefined' ? km_perc : null %>" />

                    <div class="btn-op row">
                        <button class="btn-calc col-8" 
                                type="submit" 
                                name="op" 
                                value="calc">Calcular</button>

                        <button class="btn-clear col" 
                                onclick="limpar()" 
                                type="button" 
                                name="op"
                                value="clear">Limpar</button>
                    </div>
                    <!--btn-op-->

                </form>
                <!--form /calcular-->

            </div>
            <!--content-body-->

            <div class="resultado row">
                <div class="alerta col-11 col-lg-10">
                    <div class="alert alert-primary col-12" 
                         id="result">
                        <h3 class="resultado">Seu veículo tem uma autonomia de:
                            <% if (typeof tot !== 'undefined') { %>
                            <%= tot %>
                            <% } else { %>

                            <% } %>
                            Km/L
                        </h3>
                    </div>
                    <!--alert alert-primary-->

                </div>
                <!--alerta-->

            </div>
            <!--resultado-->

        </div>
        <!--card-body-->

    </div>
    <!--container-body-->



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>

    <!--meuJavaScript-->
    <script src="js/consumo.js"></script>

</body>

</html>